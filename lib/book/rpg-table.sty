% Table Header
\newcommand{\header}[1]{{
	\par\vspace*{5pt}
	\noindent
	\sffamily\bfseries\scshape
	#1}}

% Table Environment
\newenvironment{rpg-table}[1][lX]{
	\par\vspace*{5pt}
	\noindent
	\fontfamily{tgcursor}\selectfont %Select font
	\fontfamily{tgcursor}\selectfont\scshape\color{black}
	\fontfamily{tgcursor}\selectfont
	\rowcolors{1}{}{commentgreen} % Alternate colors
	\tabularx{\linewidth}{#1}
	}
	{\endtabularx\vspace{5pt plus 1pt}\noindent} 

